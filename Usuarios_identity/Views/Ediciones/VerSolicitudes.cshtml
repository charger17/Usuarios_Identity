@model List<SolicitarRol>
@{
    ViewData["Title"] = "VerSolicitudes";
}

<h1>Solicitudes de usuarios: </h1>

<div class="container">
	<div class="row">

	<div class=" card mt-5" style="background-color:#1b1b1b;">

		<div class="table-responsive">
			@if(Model.Count() > 0){
			<table class="table table-warning">
			<thead>
				<tr>
					<th>Email</th>
					<th>Descipción</th>
					<th>Aprobar</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Name</td>
						<td >@item.Descripcion</td>
						<td>
							<a class="btn btn-success" asp-controller="Ediciones" asp-action="appro" asp-route-id="@item.Id"><i class="bi bi-patch-check-fill"></i></a>
							<a class="btn btn-danger" asp-controller="Ediciones" asp-action="Diss" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i></a>
						</td>
					</tr>
				}
			</tbody>
			</table>
		}
		else
		{
			<span>No hay solicitudes</span>
		}
		</div>

		

	</div>


</div>
</div>



@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}
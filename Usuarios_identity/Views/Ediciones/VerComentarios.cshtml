@model List<ComentarioAlAdministrador>
@{
    ViewData["Title"] = "VerComentarios";
}

<h1>Ver Comentarios</h1>

<div class="container ">
	<div class="row ">

		<div class=" card mt-5 text-center d-flex align-items-center overflow-scroll w-100"  style="background-color:#1b1b1b;max-height: 400px">


			@if (Model.Count() > 0)
			{
				@foreach (var item in Model)
				{
					<div class="card w-75 text-black text-center  border-warning mb-3 mt-3">
						<div class="card-header">
							<h5 class="card-title">Solicitud/Comentario de: @item.Email</h5>
						</div>
						<div class="card-body">
							<p class="card-text">@item.Comentario</p>
							<a class="btn btn-success" asp-controller="Ediciones" asp-action="Read" asp-route-id="@item.IdNo"><i class="bi bi-patch-check-fill"></i></a>
						</div>
					</div>
				}

			}
			else
			{
				<span>No hay Comentarios</span>
			}


			

		</div>


	</div>
</div>


@section Scripts{
	<partial name="_ValidationScriptsPartial" />

}

